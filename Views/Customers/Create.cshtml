@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid content-wrapper">
    <div class="m-sm-5">
        <div class="d-flex justify-content-start ml-sm-3 ">
            <h3 class="" style="font-weight: 500;">Customer<span style="opacity:0">0</span>Detail</h3>
        </div>
    </div>

    <div class="profile row ml-0">
        <form asp-controller="Customers" asp-action="RegisterUser" id="customer_form" class="needs-validation col-lg-12 ml-0 ml-lg-5" novalidate>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-user profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="username" type="text" class="form-control" placeholder="User Name" autofocus="autofocus" required>
                        <div class="invalid-feedback">
                            Please choose a username.
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-lock profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="password" id="password" type="password" class="form-control" placeholder="Password" required>
                        <div class="invalid-feedback">
                            Please choose a password.
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label for="create_companyName" class="col-form-label "><i class="fas fa-building profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="company" id="company" type="text" class="form-control" placeholder="Company">
                    </div>
                </div>
                <div class="invalid-feedback">
                    Please provide a company name.
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label "> <i class="fas fa-user-friends profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="contactperson" id="contact" type="text" class="form-control" placeholder="Contact Person">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label "><i class="fas fa-map-marker-alt profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="address" id="address" type="text" class="form-control" placeholder="Address">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-envelope profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="email" id="email" type="email" class="form-control" placeholder="Email">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-phone profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="phone" type="text" class="form-control" placeholder="Phone">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-mobile-alt profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="mobile" type="text" class="form-control" placeholder="Mobile">
                    </div>
                </div>
            </div>
            <div class="form-group  d-flex justify-content-end mr-6 ">
                <button type="submit" id="customer_save" class="btn-other btn-sm btn-w"><i class=" fa fa-save btn_i"></i>Save</button>
                <span style="opacity:0">0000</span>
                <button type="button" id="customer_cancel" class="btn-other btn-sm btn-w"> <i class=" fa fa-eraser btn_i"></i>Cancel</button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link href="~/plugins/mdbootstrap/css/mdb.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/plugins/jquery/dist/jquery.min.js"></script>
    <script src="~/plugins/mdbootstrap/js/mdb.min.js"></script>
    <script src="~/js/Customers/Create.js"></script>
}
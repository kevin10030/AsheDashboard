@using DeviceSM1.Models.Identity;
@model ApplicationUser
@{
    ViewData["Title"] = "Administrator Profile";
}
<div class="container-fluid content-wrapper ">
    <div class="m-sm-5">
        <div class="d-flex justify-content-start ml-sm-3 ">
            <h3 class="" style="font-weight: 500;">Profile<span style="opacity:0">0</span>Detail</h3>
        </div>
    </div>

    <div class="profile row ml-0 mt-3 ml-sm-5">
        <div class="col-md-12 col-sm-10 ">
            <div class="row mt-sm-1">
                <div class="col-md-4">
                    <div class="form-group row m-lg-3">
                        <label class="col-form-label" style="width:50px;"><i class="fas fa-user profile-icon"></i></label>
                        <div class="col-7">
                            <div class="md-form mt-3">
                                <input type="text" value="@Model.UserName" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group row m-lg-3">
                        <label class="col-form-label" style="width:50px;"><i class="fas fa-envelope profile-icon"></i></label>
                        <div class="col-7">
                            <div class="md-form mt-3">
                                <input type="text" value="@Model.Email" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 ml-auto">
                    <div class="form-group row m-lg-3">
                        <label class="col-form-label" style="width:50px;"><i class="fas fa-mobile-alt profile-icon"></i></label>
                        <div class="col-7">
                            <div class="md-form mt-3">
                                <input type="text" value="@Model.Mobile" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-sm-1">
                <div class="col-md-4">
                    <div class="form-group row m-lg-3">
                        <label class="col-form-label" style="width:50px;"><i class="fas fa-user-friends profile-icon"></i></label>
                        <div class="col-7">
                            <div class="md-form mt-3">
                                <input type="text" value="@Model.ContactPerson" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 ml-auto">
                    <div class="form-group row m-lg-3">
                        <label class="col-form-label" style="width:50px;"><i class="fas fa-phone profile-icon"></i></label>
                        <div class="col-7">
                            <div class="md-form mt-3">
                                <input type="text" value="@Model.Phone" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 ml-auto">
                    <div class="form-group row m-lg-3">
                        <label class="col-form-label" style="width:50px;"><i class="fas fa-building profile-icon"></i></label>
                        <div class="col-7">
                            <div class="md-form mt-3">
                                <input type="text" value="@Model.Company" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-sm-1">
                <div class="col-md-4">
                    <div class="form-group row m-lg-3">
                        <label class="col-form-label" style="width:50px;"><i class="fas fa-map-marker-alt profile-icon"></i></label>
                        <div class="col-7">
                            <div class="md-form mt-3">
                                <input type="text" value="@Model.Address" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 ml-auto">

                </div>
                <div class="col-md-4 ml-auto">

                </div>
            </div>

        </div>
    </div>
</div>

@section Styles {
    <link href="~/plugins/mdbootstrap/css/mdb.css" rel="stylesheet" />
}




